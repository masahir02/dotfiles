#!/usr/bin/env bash

set -e

dotfiles_dir=$HOME/src/github.com/masahir02/dotfiles
if [ ! -d $dotfiles_dir ]; then
  git clone -b darwin/arm64 git@github.com:masahir02/dotfiles.git $dotfiles_dir
fi

dotfiles=(
  .gemrc
  .psqlrc
  .tmux.conf
  .zshrc
  .Brewfile
  bin
)
for dotfile in ${dotfiles[@]}; do ln -sfv $dotfiles_dir/$dotfile $HOME; done

if [ ! -d $HOME/.config ]; then
  mkdir $HOME/.config
fi

dotconfigs=(
  karabiner
  nvim
  git
)
for dotconfig in ${dotconfigs[@]}; do ln -sfv $dotfiles_dir/.config/$dotconfig $HOME/.config; done

eval "$(/opt/homebrew/bin/brew shellenv)"
brew bundle --global
